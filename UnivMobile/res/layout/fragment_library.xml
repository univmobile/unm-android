<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
				android:background="@drawable/main_background">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/add_to_bookmarks_container"
		android:orientation="horizontal"
		android:background="@drawable/title_bg"
		android:layout_alignParentBottom="true"
		android:gravity="center">

		<TextView
			android:id="@+id/add_to_bookmarks"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="@dimen/title_size"
			android:textColor="@android:color/white"
			android:text="@string/add_lib_to_bookmarks"
			android:paddingLeft="@dimen/horizontal"
			android:drawableLeft="@drawable/ic_white_cross"
			android:drawablePadding="5dp"/>
	</LinearLayout>

	<ScrollView
		android:layout_above="@id/add_to_bookmarks_container"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<ImageView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:adjustViewBounds="true"
				android:scaleType="centerCrop"
				android:id="@+id/header_image"
				android:src="@drawable/library_header"/>

			<org.unpidf.univmobile.ui.views.LibraryListView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/library_list"
				android:layout_below="@id/header_image"/>


			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/ic_action_bar_arrow"
				android:layout_marginLeft="@dimen/article_arrow_padding"
				android:layout_marginTop="-1px"
				android:layout_below="@id/header_image"/>

		</RelativeLayout>
	</ScrollView>

</RelativeLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				tools:context="org.unpidf.univmobile.ui.fragments.GeoCampusFragment">

	<org.unpidf.univmobile.ui.views.MyCustomMapView
		android:id="@+id/mapview"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginBottom="90dp"/>

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		android:layout_alignParentRight="true"
		android:id="@+id/new_poi"
		android:src="@drawable/ic_qr"
		android:visibility="gone"/>



	<org.unpidf.univmobile.ui.views.GeoCampusCategoriesView

		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/categories"
		android:layout_alignParentBottom="true"/>

	<org.unpidf.univmobile.ui.views.PoiDetailsView
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/poi_details_container"
		android:layout_alignParentBottom="true"
		android:visibility="invisible"/>

	<org.unpidf.univmobile.ui.views.AddNewPoiView
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/new_poi_view"
		android:layout_alignParentBottom="true"
		android:visibility="invisible"/>

    <ProgressBar
        android:id="@+id/progressBar3"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="match_parent">

	<RelativeLayout
		android:layout_alignParentBottom="true"
		android:layout_marginBottom="53dp"
		android:layout_marginTop="55dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/top_container">

		<View
			android:layout_width="match_parent"
			android:layout_height="2dp"
			android:background="@android:color/white"
			android:id="@+id/top_separator"/>

		<ImageView
			android:layout_below="@id/top_separator"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/search"
			android:src="@drawable/ic_search"
			android:paddingTop="7dp"
			android:paddingBottom="7dp"
			android:paddingLeft="20dp"
			android:paddingRight="20dp"/>

		<TextView
			android:id="@+id/title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/search"
			android:layout_alignTop="@id/search"
			android:layout_alignBottom="@id/search"
			android:text="@string/sort_by_categories"
			android:textColor="@android:color/white"
			android:textSize="@dimen/title_size"
			android:gravity="center_vertical|right"
			android:paddingRight="@dimen/horizontal"
			android:drawableRight="@drawable/ic_arrow_up"
			android:drawablePadding="5dp"/>

		<View
			android:layout_width="match_parent"
			android:layout_height="2dp"
			android:id="@+id/separator_bottom"
			android:layout_below="@id/search"
			android:background="@android:color/white"/>

		<ScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_below="@id/separator_bottom"
			android:id="@+id/categories_scroll"
			android:visibility="gone"
			android:scrollbarThumbVertical="@drawable/scrollbar">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:id="@+id/categories_container"
				android:orientation="vertical">

			</LinearLayout>
		</ScrollView>
	</RelativeLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="55dp"
		android:id="@+id/tabs"
		android:orientation="horizontal"
		android:layout_alignParentBottom="true">

		<RelativeLayout
			android:id="@+id/cat_1"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:padding="10dp"
			android:background="@drawable/ic_geo_tab_unselected_bg">

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:src="@drawable/ic_geo_category_1"
				android:scaleType="fitCenter"/>
		</RelativeLayout>

		<View
			android:layout_width="2dp"
			android:layout_height="match_parent"
			android:background="@color/geo_gray_dark"/>

		<RelativeLayout
			android:id="@+id/cat_2"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:padding="10dp"
			android:background="@drawable/ic_geo_tab_unselected_bg">

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:src="@drawable/ic_geo_category_2"
				android:scaleType="fitCenter"/>
		</RelativeLayout>

		<View
			android:layout_width="2dp"
			android:layout_height="match_parent"
			android:background="@color/geo_gray_dark"/>

		<RelativeLayout
			android:id="@+id/cat_3"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:padding="10dp"
			android:background="@drawable/ic_geo_tab_unselected_bg">

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:src="@drawable/ic_geo_category_3"
				android:scaleType="fitCenter"/>
		</RelativeLayout>
	</LinearLayout>

</RelativeLayout>
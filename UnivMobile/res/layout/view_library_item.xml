<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@android:color/white">

	<ImageView
		android:id="@+id/library_bookmark_ic"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/ic_library_bookmark"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:layout_marginRight="@dimen/horizontal"/>

	<ImageView
		android:id="@+id/library_icons"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingTop="@dimen/horizontal"
		android:src="@drawable/ic_bibliotec_icons"
		android:paddingLeft="@dimen/horizontal"/>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="@dimen/horizontal"
		android:textColor="@android:color/black"
		android:text="Conservatoire national des arts et métiers - Bibliothèque centrale"
		android:textSize="@dimen/content_size"
		android:layout_below="@id/library_icons"
		android:layout_toLeftOf="@id/library_bookmark_ic"
		android:id="@+id/library_bookmark_content"
		android:paddingBottom="@dimen/horizontal"/>

	<View
		android:layout_width="10px"
		android:layout_height="wrap_content"
		android:layout_alignBottom="@id/library_bookmark_content"
		android:layout_alignParentTop="true"
		android:background="@color/orange"/>

	<View
		android:layout_below="@id/library_bookmark_content"
		android:layout_width="match_parent"
		android:layout_height="@dimen/separator_size"
		android:background="@color/orange"/>
</RelativeLayout>
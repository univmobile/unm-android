<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/splash_screen_footer"
        android:layout_alignParentBottom="true"
        android:background="@drawable/splash_screen_bottom_part"/>

    <LinearLayout
        android:id="@+id/data_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/splash_screen_footer"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:paddingTop="15dp"
        android:paddingBottom="5dp"
        android:background="@drawable/select_university_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:text="@string/select_region"
            android:textColor="@android:color/white"
            android:textSize="7pt"
            android:paddingBottom="5dp"/>

        <Spinner
            android:gravity="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:background="@drawable/spinner_background"
            android:layout_marginBottom="5dp"
            android:spinnerMode="dropdown"
            android:popupBackground="#fff"
            android:dropDownVerticalOffset="-10px"
            android:dropDownWidth="match_parent"/>

        <TextView
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/accept"
            android:id="@+id/accept_button"
            android:background="@drawable/selector_button_green"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textColor="#fffffd"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginBottom="15dp"
            android:textSize="8pt"/>


    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/splash_screen_header"
        android:src="@drawable/splash_screen_top_part"
        android:layout_above="@+id/data_container"
        android:scaleType="centerCrop"
        />


</RelativeLayout>
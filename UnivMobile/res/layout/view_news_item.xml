<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
					android:orientation="vertical"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/header"
					android:gravity="center_vertical">

		<ImageView
			android:layout_width="110dp"
			android:layout_height="wrap_content"
			android:adjustViewBounds="true"
			android:id="@+id/icon_act"
			android:layout_marginRight="10dp"
			android:layout_centerVertical="true"/>

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/ic_arrow"
			android:layout_alignBottom="@id/icon_act"
			android:layout_alignTop="@id/icon_act"
			android:src="@drawable/ic_arrow_normal"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="20dp"
			android:layout_marginLeft="20dp"/>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_toLeftOf="@id/ic_arrow"
			android:layout_toRightOf="@id/icon_act"
			android:layout_alignTop="@id/icon_act"
			android:gravity="center_vertical"
			android:layout_marginTop="10dp"
			android:layout_marginBottom="10dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/time_act"
				android:textSize="@dimen/date_size"
				android:textColor="@android:color/black"
				android:paddingBottom="2dp"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/title_act"
				android:minLines="3"
				android:textSize="@dimen/content_size"
				android:textColor="@android:color/black"/>
		</LinearLayout>

	</RelativeLayout>

	<LinearLayout
		android:orientation="vertical"
		android:id="@+id/content_container"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="@dimen/horizontal"
		android:paddingRight="@dimen/horizontal"
		android:paddingTop="5dp"
		android:paddingBottom="5dp"
		android:layout_below="@id/header">

		<TextView
			android:id="@+id/content_act"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="@dimen/content_size"
			android:textColor="@android:color/black"
			android:paddingBottom="5dp"/>

		<TextView
			android:clickable="true"
			android:id="@+id/action_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="@dimen/button_size"
			android:background="@drawable/selector_button_yellow"
			android:textColor="@android:color/white"
			android:text="Aller plus loin "
			android:layout_gravity="right"
			android:padding="5dp"/>
	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="@dimen/separator_size"
		android:background="@color/yellow"
		android:layout_below="@id/content_container"/>
</RelativeLayout>